{{>navbar}}
<div id="wrapper">
    {{>sidebarStaff}}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 mt-3 mb-3">
                <div class="card rounded shadow">
                    <img class="card-img-top" src="{{product.imgSrc}}" style="object-fit:cover" alt="Card image cap">
                </div>
            </div>
            <div class="col-md-6 mt-3 mb-3">
                <h2>Product name: {{product.name}}</h2>
                <p>{{product.description}}</p>
                <h3 style="color: red;">Recipe: </h3>
                <textarea id="formula" cols="50" rows="10" class="h5 border-0" readonly
                    disabled>{{product.formula}} </textarea>
            </div>
        </div>
    </div>
</div>
