{{>navbar}}
<div id="wrapper">
    {{>sidebarStaff}}
    <div class="container-fluid">
        <h1>Staff Detail</h1>
        <form data-toggle="validator" role="form" id="staff-update-form">
            <div class="row">

                <div class="form-group col-12">
                    <label for="name" class="control-label">Name</label>
                    <input type="text" class="form-control" id="name" value="{{user.name}}" required>
                    <div class="help-block with-errors"></div>
                </div>

                <div class="form-group col-12">
                    <label for="phoneNumber" class="control-label">Phone Number</label>
                    <input type="text" class="form-control" id="phoneNumber" value="{{user.phoneNumber}}" required>
                    <div class=" help-block with-errors"></div>
                </div>
                <div class="form-group col-12">
                    <label for="address" class="control-label">address</label>
                    <input type="text" class="form-control" id="address" value="{{user.address}}" required>
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-xl-12">
                    <label for=" birthday" class="control-label">Birthday</label>
                    <input type="text" data-dateValid class="form-control" id="birthday" value="{{user.birthday}}"
                        required>
                    <div class="help-block with-errors"></div>
                </div>
                <button type="submit" class="btn btn-primary" style="margin:10px auto">Submit</button>
            </div>

        </form>
        <hr>
        <h2 class="my-3">Change password:</h2>
        <form id="change-password-form">
            <div class="form-group row">
                <label for="old-password" class="col-md-2 h5"> Old password:</label>
                <div class="col-md-10">
                    <input type="password" class="form-controlt h5" id="old-password" required name="old-password"
                        data-error="Please enter your address">
                    <div class="help-block with-errors"></div>
                </div>
            </div>
            <div class="form-group row">
                <label for="new-password" class="col-md-2 h5"> New password:</label>
                <div class="col-md-10">
                    <input type="password" class="form-controlt h5" id="new-password" required name="new-password"
                        data-error="Please enter your address">
                    <div class="help-block with-errors"></div>
                </div>
            </div>
            <div class="form-group row">
                <label for="confirm-password" class="col-md-2 h5"> Confirm new
                    password:</label>
                <div class="col-md-10">
                    <input type="password" class="form-controlt h5" id="confirm-password" required
                        name="confirm-password" <div class="help-block with-errors">
                </div>
            </div>
            <div class="text-center">
                <div class="pwd-not-match"></div>
                <button type="submit" id="change-password-submit" class="btn btn-primary">Change
                    password</button>

            </div>
        </form>

        <div id="dialog"></div>
        <div id="msgSubmit"></div>
    </div>
</div>
{{>logout}}
{{>scrolltotop}}
{{#extend "script"}}
<script src="/js/staff-update-form.js"></script>
<script src="/js/change-password.js"></script>

{{/extend}}