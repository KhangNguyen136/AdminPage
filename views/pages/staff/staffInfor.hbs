{{>navbar}}
<div id="wrapper">
    {{>sidebarStaff}}
    <div class="container-fluid">
        <h1>Staff Detail</h1>
        <form data-toggle="validator" role="form" id="staff-update-form">
            <div class="row">
                <div class="form-group col-12">
                    <label for="name" class="control-label">Name</label>
                    <input type="text" readonly class="form-control" id="name" value="{{user.name}}" required>
                    <div class="help-block with-errors"></div>
                </div>

                <div class="form-group col-12">
                    <label for="phoneNumber" class="control-label">Phone Number</label>
                    <input type="text" readonly class="form-control" id="phoneNumber" value="{{user.phoneNumber}}"
                        required>
                    <div class=" help-block with-errors"></div>
                </div>
                <div class="form-group col-12">
                    <label for="address" class="control-label">address</label>
                    <input type="text" readonly class="form-control" id="address" value="{{user.address}}" required>
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-xl-12">
                    <label for=" birthday" class="control-label">Birthday</label>
                    <input type="text" readonly data-dateValid class="form-control" id="birthday"
                        value="{{user.birthday}}" required>
                    <div class="help-block with-errors"></div>
        </form>
        <div style="text-align: center;">
            <a class="btn btn-primary my-5" style="width: 50%;" href="/info/edit">Update profile</a>
        </div>
    </div>
</div>


{{>logout}}
{{>scrolltotop}}
{{#extend "script"}}
<script src="/js/staffDetail-form.js"></script>
{{/extend}}